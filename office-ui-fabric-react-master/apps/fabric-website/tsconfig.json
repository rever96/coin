{
  "compilerOptions": {
    "outDir": "lib",
    "target": "es5",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "lib": ["es5", "dom"],
    "types": ["node", "webpack-env"]
  },
  "include": ["src"]
}
